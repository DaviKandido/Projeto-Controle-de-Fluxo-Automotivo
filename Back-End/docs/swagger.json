{
  "openapi": "3.0.3",
  "info": {
    "title": "API - Sistema de Controle de Fluxos Veiculares",
    "description": "API para gerenciamento de usuários, integradores, municípios, equipamentos e fluxos veiculares.",
    "version": "1.0.0",
    "contact": {
      "name": "DNIT",
      "url": "https://www.gov.br/dnit"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "tags": [
    {
      "name": "Autenticação",
      "description": "Operações de autenticação"
    },
    {
      "name": "Usuários",
      "description": "Operações com usuários do sistema"
    },
    {
      "name": "Integradores",
      "description": "Operações com integradores de equipamentos"
    },
    {
      "name": "Municípios",
      "description": "Operações com municípios"
    },
    {
      "name": "Equipamentos",
      "description": "Operações com equipamentos de medição"
    },
    {
      "name": "Fluxos",
      "description": "Operações com registros de fluxo veicular"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Usuario": {
        "type": "object",
        "required": ["login", "senha", "nome", "ativo"],
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "login": {
            "type": "string",
            "maxLength": 30,
            "example": "admin"
          },
          "senha": {
            "type": "string",
            "maxLength": 100,
            "example": "senha123"
          },
          "nome": {
            "type": "string",
            "maxLength": 100,
            "example": "Administrador do Sistema"
          },
          "ativo": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "Integrador": {
        "type": "object",
        "required": ["nome"],
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "nome": {
            "type": "string",
            "maxLength": 255,
            "example": "Integrador XYZ"
          }
        }
      },
      "Municipio": {
        "type": "object",
        "required": ["codigo", "descricao", "uf"],
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "codigo": {
            "type": "integer",
            "example": 3106200
          },
          "descricao": {
            "type": "string",
            "maxLength": 100,
            "example": "Belo Horizonte"
          },
          "uf": {
            "type": "string",
            "enum": [
              "AC",
              "AL",
              "AP",
              "AM",
              "BA",
              "CE",
              "DF",
              "ES",
              "GO",
              "MA",
              "MT",
              "MS",
              "MG",
              "PA",
              "PB",
              "PR",
              "PE",
              "PI",
              "RJ",
              "RN",
              "RS",
              "RO",
              "RR",
              "SC",
              "SP",
              "SE",
              "TO"
            ],
            "example": "MG"
          }
        }
      },
      "Equipamento": {
        "type": "object",
        "required": [
          "codigo",
          "faixa",
          "tipo",
          "ativo",
          "local",
          "marca",
          "modelo",
          "dataAfericao",
          "lacre",
          "integradorId",
          "municipioId"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "codigo": {
            "type": "string",
            "maxLength": 11,
            "example": "EQP001"
          },
          "faixa": {
            "type": "integer",
            "minimum": 1,
            "maximum": 127,
            "example": 1
          },
          "tipo": {
            "type": "string",
            "enum": ["CEV", "REV", "CEM"],
            "example": "CEV"
          },
          "ativo": {
            "type": "boolean",
            "example": true
          },
          "local": {
            "type": "string",
            "maxLength": 80,
            "example": "Rodovia BR-040, km 120"
          },
          "marca": {
            "type": "string",
            "maxLength": 40,
            "example": "XYZ Sensores"
          },
          "modelo": {
            "type": "string",
            "maxLength": 40,
            "example": "S1000"
          },
          "velocidadeLimite": {
            "type": "integer",
            "minimum": 0,
            "example": 80
          },
          "dataAfericao": {
            "type": "string",
            "format": "date",
            "example": "2025-01-15"
          },
          "lacre": {
            "type": "string",
            "maxLength": 20,
            "example": "L123456"
          },
          "dataRegistroInmetro": {
            "type": "string",
            "format": "date",
            "example": "2025-01-10"
          },
          "numeroInmetro": {
            "type": "string",
            "maxLength": 30,
            "example": "INM123456789"
          },
          "integradorId": {
            "type": "integer",
            "example": 1
          },
          "municipioId": {
            "type": "integer",
            "example": 1
          }
        }
      },
      "Fluxo": {
        "type": "object",
        "required": [
          "seq",
          "data",
          "hora",
          "classVeic",
          "dataRecebimento",
          "equipamentoId"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "seq": {
            "type": "integer",
            "example": 12345
          },
          "data": {
            "type": "string",
            "format": "date",
            "example": "2025-07-21"
          },
          "hora": {
            "type": "string",
            "format": "time",
            "example": "14:30:00"
          },
          "placa": {
            "type": "string",
            "maxLength": 7,
            "example": "ABC1D23"
          },
          "velMed": {
            "type": "integer",
            "minimum": 0,
            "example": 85
          },
          "tamVeic": {
            "type": "integer",
            "minimum": 0,
            "example": 420
          },
          "classVeic": {
            "type": "string",
            "maxLength": 3,
            "example": "3"
          },
          "pesoBt": {
            "type": "integer",
            "minimum": 0,
            "example": 3500
          },
          "dataRecebimento": {
            "type": "string",
            "format": "date-time",
            "example": "2025-07-21T14:30:45Z"
          },
          "equipamentoId": {
            "type": "integer",
            "example": 1
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Mensagem de erro"
          },
          "details": {
            "type": "string",
            "example": "Detalhes do erro"
          },
          "statusCode": {
            "type": "integer",
            "example": 400
          }
        }
      }
    },
    "parameters": {
      "idPath": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "integer"
        },
        "description": "ID do recurso"
      },
      "limitQuery": {
        "name": "limit",
        "in": "query",
        "schema": {
          "type": "integer",
          "default": 30,
          "maximum": 100
        },
        "description": "Limite de resultados retornados"
      }
    }
  },
